<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingHorizontal="30sp"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".InstituteEnterDetailsActivity">

    <RelativeLayout
        android:id="@+id/institutelayout"
        android:layout_marginTop="75sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo" />
    </RelativeLayout>

    <LinearLayout
        android:padding="30sp"
        android:layout_below="@id/institutelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="22sp"
            android:layout_marginBottom="20sp"
            android:text="ENTER DETAILS" />

        <Spinner
            android:id="@+id/spinner_colleges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="College"
            android:spinnerMode="dropdown"
            android:minHeight="48dp"/>

        <EditText
            android:id="@+id/insituteEnterDetailsAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Address"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/insituteEnterDetailsMobile"
                android:minHeight="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Mobile"
                android:inputType="phone" />

            <EditText
                android:id="@+id/insituteEnterDetailsTelephone"
                android:minHeight="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Telephone"
                android:inputType="phone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_cities"
                android:minHeight="48dp"
                android:spinnerMode="dropdown"
                android:contentDescription="City"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/spinner_states"
                android:minHeight="48dp"
                android:spinnerMode="dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="state"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/insituteEnterDetailsPinCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:minHeight="48dp"
                android:inputType="textPostalAddress"
                android:hint="PinCode" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/insituteEnterDetailsSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:backgroundTintMode="add"
                android:layout_marginTop="20sp"
                android:text="SUBMIT"
                android:textColor="@color/black" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_marginTop="10sp"
            android:textColorHint="#ff0000"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:hint="All the fields are mandatory" />

    </LinearLayout>


</RelativeLayout>