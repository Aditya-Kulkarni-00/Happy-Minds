<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".InstituteHomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingHorizontal="50sp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/insituteHomeFragmentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/logo">

            </ImageView>
        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/insituteHomeFragmentLayout2"
            android:layout_below="@id/insituteHomeFragmentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp">


            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="WELCOME"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>


        <LinearLayout
            android:layout_marginTop="30sp"
            android:layout_below="@+id/insituteHomeFragmentLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:paddingVertical="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/cardview_default_elevation"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="20sp"
                    android:id="@+id/InstituteHomeFragmentCollegeName"
                    android:paddingHorizontal="10sp"
                    android:paddingVertical="10sp"
                    android:drawableLeft="@drawable/institutehomefragmentname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="" />

                <TextView
                    android:id="@+id/InstituteHomeFragmentCollegeAddress"
                    android:paddingHorizontal="10sp"
                    android:layout_marginVertical="10sp"
                    android:drawableLeft="@drawable/institutehomefragmentaddress"
                    android:paddingVertical="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="" />

                <TextView
                    android:id="@+id/InstituteHomeFragmentCollegeMobile"
                    android:paddingHorizontal="10sp"
                    android:drawableLeft="@drawable/institutehomefragmentmobile"
                    android:paddingVertical="10sp"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginBottom="20sp"
                    android:layout_height="wrap_content"
                    android:text="" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:paddingVertical="30sp"
                android:layout_marginTop="50sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/cardview_default_elevation"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:paddingHorizontal="10sp"
                        android:paddingVertical="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Instructions :" />

                    <TextView
                        android:layout_width="match_parent"
                        android:paddingHorizontal="20sp"
                        android:layout_height="wrap_content"
                        android:text="•The student should follow the same number as given by the institute." />

                    <TextView
                        android:layout_marginTop="10sp"
                        android:layout_width="match_parent"
                        android:paddingHorizontal="20sp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20sp"
                        android:text="•Will contain the purpose of the app, use of the statistics provided, preffered conduction of test and also few ideas related to extra time for depressed." />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>



</FrameLayout>